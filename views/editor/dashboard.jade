extends ../layout.jade
block main
	div.editor
		block content
			div.center
				form(action="/editor/newworkspace", method="POST")
					ul.noul
						li
							h3.divider Workspace Dashboard
							.ui.cards
								each val in workspaces
									.card
										.content
											.header #{val.workspace}
											.description
											|	#{val.description}
										.extra.content
											.ui.two.buttons
												button(class="ui basic green button" type="submit" name="butt" value=val.workspace) Start
												button(class="ui basic red button" type="submit" name="butt" value=val.workspace) Delete
								.card
										.content
											.header 
												input.input-block-level(name="workspacename", placeholder="Workspace Name") 
											.description
												input.input-block-level(name="descrip", placeholder="Description")
										.ui.one.buttons
												button(class="ui basic green button" type="submit" name="butt" value="create") +	

block post_wrap
	
